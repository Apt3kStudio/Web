@page
@model WebPortalAPI.Areas.Admin.Controllers.CreateModel

<h4>FileUpload</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="files" type="file" class="form-control" multiple />
            </div>
            <div class="form-group">
                <select asp-for="FileUpload.Type" class="form-control" asp-items="Model.FileUpload.logosTypes">
                    <option>Select Logo</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="FileUploadIndex">Back to List</a>
</div>

@functions{

    Utils utility = new Utils();
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
